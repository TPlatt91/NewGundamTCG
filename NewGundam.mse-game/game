	name:				AP/HP
	save value:			false
	script: 
		combined_editor(
			field1: card.AP,
			separator1: " ",
			field2: card.HP,
			soft_before_empty: true,
			hide_when_empty:   true
		)
	card list visible:		true
	card list column:		5
	card list width:		50
	card list name:			AP/HP
	description:			Attack/Health Power
	show statistics:		false

